{% extends "base.html.twig" %}

{% block stylesheets %}
    {% stylesheets 'bundles/tom32idemo/css/*.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock stylesheets %}

{% block title 'Login' %}

{% block body %}
    {{ form_start(form) }}
        <fieldset>
            <legend>Login</legend>

            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            {{ form_row(form.remember_me) }}
            {{ form_row(form.submit) }}
        </fieldset>
    {{ form_end(form) }}
{% endblock body %}