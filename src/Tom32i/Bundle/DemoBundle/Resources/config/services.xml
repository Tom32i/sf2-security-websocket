<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tom32i_demo.redis_indexer.class">Tom32i\Bundle\DemoBundle\Service\RedisIndexer</parameter>
        <parameter key="tom32i_demo.ticket_manager.class">Tom32i\Bundle\DemoBundle\Service\TicketManager</parameter>
        <parameter key="tom32i_demo.kernel_subscriber.class">Tom32i\Bundle\DemoBundle\Service\KernelSubscriber</parameter>
    </parameters>

    <services>
        <service id="tom32i_demo.redis_indexer" class="%tom32i_demo.redis_indexer.class%" />

        <service id="tom32i_demo.ticket_manager" class="%tom32i_demo.ticket_manager.class%">
            <argument type="service" id="tom32i_demo.redis_indexer" />
            <argument type="service" id="twig" />
            <argument type="service" id="security.context" on-invalid="ignore" />
        </service>

        <service id="tom32i_demo.kernel_subscriber" class="%tom32i_demo.kernel_subscriber.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="tom32i_demo.ticket_manager" />
        </service>
    </services>
</container>
